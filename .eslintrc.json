{
	"root": true,
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"extends": ["eslint:recommended", "prettier"],
	"env": {
		"es2021": true,
		"node": true
	},
	"rules": {
		"no-console": "error",
		"no-duplicate-imports": ["error", { "includeExports": true }],
		"default-case": "error",
		"no-const-assign": "error",
		"indent": ["error", "tab"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	}
}
